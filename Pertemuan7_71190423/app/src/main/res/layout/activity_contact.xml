<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blueneon">


    <LinearLayout
        android:id="@+id/linearLayoutGmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutLine"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/gmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:drawablePadding="10dp"
            android:padding="15dp"
            android:text="TextView"
            android:textColor="@color/aqua"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/gmailLogo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="17dp"
            app:srcCompat="@drawable/gmail" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutWA">

        <TextView
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:drawablePadding="10dp"
            android:padding="15dp"
            android:text="TextView"
            android:textColor="@color/aqua"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/LineApp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="17dp"
            app:srcCompat="@drawable/linelogo" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutWA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutPhone">

        <TextView
            android:id="@+id/whatsapp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:drawablePadding="10dp"
            android:padding="15dp"
            android:text="TextView"
            android:textColor="@color/aqua"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/logoWA"
            android:layout_width="48dp"
            android:layout_height="47dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:padding="1dp"
            android:outlineAmbientShadowColor="@color/aqua"
            app:srcCompat="@drawable/whatsapplogo"
            tools:layout_editor_absoluteX="99dp"
            tools:layout_editor_absoluteY="596dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:background="@color/blue"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">


    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/buttonBack"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shappingcont"
        android:backgroundTint="@color/button_background_color"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_new_24" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.187">


        <ImageView
            android:id="@+id/imageCover"
            android:layout_width="365dp"
            android:layout_height="174dp"
            android:layout_gravity="center"
            android:layout_marginTop="120dp"
            android:layout_marginRight="1dp"
            android:padding="5dp"
            app:srcCompat="@drawable/shapeone" />

        <ImageView
            android:id="@+id/photos"
            android:layout_width="match_parent"
            android:layout_height="162dp"
            android:layout_gravity="center"
            android:layout_marginTop="-250dp"
            android:padding="10dp"
            tools:srcCompat="@drawable/avatarmenone" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/aqua"
            android:textSize="40sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutPhone"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@color/blue"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/telephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_weight="100"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:text="TextView"
            android:textColor="@color/aqua"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_baseline_message_24" />

        <ImageView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_baseline_local_phone_24" />

        <ImageView
            android:id="@+id/videoLogo"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_baseline_videocam_24" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>