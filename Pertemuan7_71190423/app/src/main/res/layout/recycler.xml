<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/darkblue">

    <TextView
        android:id="@+id/Contacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="190dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/shapping"
        android:drawableLeft="@drawable/ic_baseline_library_books_24"
        android:drawablePadding="15dp"
        android:fontFamily="@font/alata"
        android:padding="10dp"
        android:text="CONTACTS"
        android:textColor="#00CDFF"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcyView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/main_layout" />
    </LinearLayout>


</LinearLayout>