<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nvidiageforce"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/geforce_bold"
        android:gravity="center"
        android:text="LOG IN"
        android:textAllCaps="false"
        android:textColor="#08FF00"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.29" />

    <ImageView
        android:id="@+id/nvidia"
        android:layout_width="192dp"
        android:layout_height="141dp"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.098"
        app:srcCompat="@drawable/nvidialight" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.442">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/userName"
            style="@android:style/Widget.Holo.Light.EditText"
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="90dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/shapping"
            android:backgroundTint="#F36DD506"
            android:drawableLeft="@drawable/ic_baseline_person_outline_24"
            android:drawablePadding="10dp"
            android:fontFamily="@font/alata"
            android:hint="Username"
            android:inputType="text"
            android:padding="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColorHint="#335737"
            android:textSize="14sp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password"
            style="@android:style/Widget.Holo.Light.EditText"
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userName"
            android:layout_gravity="center"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="90dp"
            android:background="@drawable/shapping"
            android:backgroundTint="#F36DD506"
            android:drawableLeft="@drawable/ic_baseline_security_24"
            android:drawablePadding="10dp"
            android:fontFamily="@font/alata"
            android:hint="Password"
            android:inputType="text"
            android:padding="5dp"
            android:password="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColorHint="#335737"
            android:textSize="14sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.232">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/registerAccount"
            android:layout_width="149dp"
            android:layout_height="23dp"
            android:layout_gravity="center"
            android:layout_marginLeft="140dp"
            android:layout_marginRight="140dp"
            android:layout_marginBottom="2dp"
            android:background="#00FFFFFF"
            android:backgroundTint="#00FFFFFF"
            android:fontFamily="@font/geforce_bold"
            android:paddingBottom="5dp"
            android:text="Register Account"
            android:textColor="@color/button_background_color_3"
            android:textSize="11dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/geforce_bold"
            android:paddingBottom="1dp"
            android:text="or"
            android:textAllCaps="false"
            android:textColor="@color/green"
            android:textSize="20sp" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/forgotPassword"
        android:layout_width="152dp"
        android:layout_height="32dp"
        android:layout_gravity="right"
        android:layout_marginBottom="13dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#00FFFFFF"
        android:fontFamily="@font/geforce_bold"
        android:gravity="center"
        android:paddingTop="0dp"
        android:text="Forgot Password?"
        android:textAllCaps="false"
        android:textColor="@color/button_background_color_3"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/linear2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.702"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Login"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="7dp"
        android:background="@drawable/vectorone"
        android:backgroundTint="@color/button_background_color_6"
        android:drawableRight="@drawable/ic_baseline_double_arrow_24_1"
        android:drawablePadding="-19dp"
        android:fontFamily="@font/geforce_bold"
        android:paddingLeft="20dp"
        android:paddingRight="30dp"
        android:paddingBottom="8dp"
        android:text="login"
        android:textColor="@color/button_background_color_3"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear2"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>

