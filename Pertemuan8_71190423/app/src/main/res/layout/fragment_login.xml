<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/nvidiageforce"
    android:backgroundTintMode="screen"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/nvidia"
        android:layout_width="192dp"
        android:layout_height="141dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:foregroundGravity="center"
        android:src="@drawable/nvidialight" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/geforce_bold"
        android:gravity="center"
        android:text="LOG IN"
        android:textAllCaps="false"
        android:textColor="#08FF00"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/userName"
            style="@android:style/Widget.Holo.Light.EditText"
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="90dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/shapping"
            android:backgroundTint="#F36DD506"
            android:drawableLeft="@drawable/ic_baseline_person_outline_24"
            android:drawablePadding="10dp"
            android:fontFamily="@font/alata"
            android:hint="Username"
            android:inputType="text"
            android:padding="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColorHint="#335737"
            android:textSize="14sp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password"
            style="@android:style/Widget.Holo.Light.EditText"
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userName"
            android:layout_gravity="center"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="90dp"
            android:background="@drawable/shapping"
            android:backgroundTint="#F36DD506"
            android:drawableLeft="@drawable/ic_baseline_security_24"
            android:drawablePadding="10dp"
            android:fontFamily="@font/alata"
            android:hint="Password"
            android:inputType="text"
            android:padding="5dp"
            android:password="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColorHint="#335737"
            android:textSize="14sp" />


    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/forgotPassword"
        android:layout_width="200dp"
        android:layout_height="32dp"
        android:layout_gravity="right"
        android:layout_marginRight="40dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#00FFFFFF"
        android:fontFamily="@font/geforce_bold"
        android:gravity="center"
        android:text="Forgot Password?"
        android:textAllCaps="false"
        android:textColor="@color/button_background_color_3"
        android:textSize="15sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Login"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="164dp"
        android:background="@drawable/vectorone"
        android:backgroundTint="@color/button_background_color_6"
        android:drawableRight="@drawable/ic_baseline_double_arrow_24_1"
        android:drawablePadding="-19dp"
        android:fontFamily="@font/geforce_bold"
        android:paddingLeft="20dp"
        android:paddingRight="30dp"
        android:paddingBottom="8dp"
        android:text="login"
        android:textColor="@color/button_background_color_3"
        android:textSize="20sp" />


</LinearLayout>

